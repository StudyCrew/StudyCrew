{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "public/*": ["./public/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "src/types/declarations.d.ts",
    "*.ts",
    "*.tsx",
    "src/**/*",
    ".next/types/**/*.ts",
    "components/**/*",
    "lib/**/*",
    "utils/cn.ts"
  ],
  "exclude": ["node_modules"]
}
